---
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../data/projects";
---

<Layout>
    <section class="projects-page">
        <div class="container">
            <h1>Mis Proyectos</h1>
            <p class="intro">
                Aquí puedes ver una selección de mis trabajos más recientes.
            </p>
            <div class="grid">
                {
                    projects.map((project) => (
                        <article class="project-card">
                            <img src={project.image} alt={project.title} />
                            <div class="content">
                                <h3>{project.title}</h3>
                                <p>{project.description}</p>
                                <div class="tags">
                                    {project.tags.map((tag) => (
                                        <span class="tag">{tag}</span>
                                    ))}
                                </div>
                                <a
                                    href={`/projects/${project.slug}`}
                                    class="details-link"
                                >
                                    Ver Detalles &rarr;
                                </a>
                            </div>
                        </article>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>

<style>
    .projects-page {
        padding: 4rem 0;
        background-color: #fff;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }
    h1 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #333;
    }
    .intro {
        text-align: center;
        color: #666;
        margin-bottom: 3rem;
        font-size: 1.1rem;
    }
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }
    .project-card {
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
        transition:
            transform 0.3s,
            box-shadow 0.3s;
    }
    .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    .project-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .content {
        padding: 1.5rem;
    }
    h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.25rem;
        color: #222;
    }
    p {
        color: #666;
        font-size: 0.95rem;
        margin-bottom: 1rem;
    }
    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }
    .tag {
        background-color: #f0f0f0;
        color: #555;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.8rem;
    }
    .details-link {
        display: inline-block;
        color: #007bff;
        text-decoration: none;
        font-weight: 600;
    }
    .details-link:hover {
        text-decoration: underline;
    }
</style>
